@model ProductModel
@{
    ViewData["Title"] = "CreateProduct";
}

<h1>Create Product</h1>
<hr />

<div class="row">
    <div class="col-8">
        <form asp-controller="Admin" asp-action="CreateProduct" method="post">
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label">Name</label>
                <div class="col-md-10">
                    <input asp-for="Name" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-form-label">Image Url</label>
                <div class="col-md-10">
                    <input asp-for="ImageUrl" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label">Description</label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Description" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label">Price</label>
                <div class="col-md-10">
                    <input asp-for="Price" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-2">
                    <button class="btn btn-primary" type="submit">Save Product</button>
                </div>

            </div>
        </form>
    </div>
</div>